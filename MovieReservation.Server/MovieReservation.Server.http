@MovieReservation.Server_HostAddress = http://localhost:5178



###

# ===========================================
# BOOKINGS API ENDPOINTS
# ===========================================

# Get all bookings
GET http://localhost:5178/api/Bookings/all
Accept: application/json

###

# Get booking by ID
GET http://localhost:5178/api/bookings/id/1
Accept: application/json

###

# Create new booking
POST http://localhost:5178/api/bookings/create
Content-Type: application/json

{
  "userId": "2b6dfb56-8a4d-4df7-8b9f-b2d0a18bb58e",
  "showId": 0,
  "seatRow": "",
  "seatNumber": 0,
  "price": 0,
  "status": 0,
  "bookingDateTime": ""
}

###

# Update booking
PUT http://localhost:5178/api/bookings/update
Content-Type: application/json

{
  "id": 0,
  "userId": "2b6dfb56-8a4d-4df7-8b9f-b2d0a18bb58e",
  "showId": 0,
  "seatRow": "",
  "seatNumber": 0,
  "price": 0,
  "status": "",
  "bookingDateTime": "2024-01-15T19:30:00Z"
}

###

# Delete booking
DELETE http://localhost:5178/api/bookings/delete/1
Accept: application/json

###

###

# ===========================================
# MOVIES API ENDPOINTS
# ===========================================

### Get all movies
GET http://localhost:5178/api/movies/all
Accept: application/json

### Get movie by ID
GET http://localhost:5178/api/movies/id/1
Accept: application/json

### Get filtered movies
GET http://localhost:5178/api/movies/filtered?movie_type=now_showing&page=1&pageSize=10
Accept: application/json

### Get roles for a movie
GET http://localhost:5178/api/movies/id/1/roles
Accept: application/json

### Create new movie
POST http://localhost:5178/api/movies/create
Content-Type: application/json

{
  "title": "Inception",
  "year": 2025,
  "summary": "A mind-bending thriller by Christopher Nolan",
  "trailerUrl": "string",
  "posterUrl": "string",
  "movieType": "ComingSoon"
}

### Update movie
PUT http://localhost:5178/api/movies/update
Content-Type: application/json

{
  "id": 1,
  "movieType": "Removed"
}

### Delete movie
DELETE http://localhost:5178/api/movies/delete/id/1
Accept: application/json
